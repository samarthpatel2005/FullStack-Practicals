<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <i class="fas fa-graduation-cap"></i>
                <span>Tuition Admin</span>
            </div>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="/students" class="nav-link active"><i class="fas fa-users"></i> Students</a></li>
                <li><a href="/students/add" class="nav-link"><i class="fas fa-user-plus"></i> Add Student</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <h1><i class="fas fa-users"></i> All Students</h1>
            <p>Manage your tuition class students</p>
        </div>

        <!-- Alert Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success" id="alert">
                <i class="fas fa-check-circle"></i>
                <%= success %>
            </div>
        <% } %>

        <!-- Filters and Search -->
        <div class="filters-container">
            <form class="filters-form" method="GET">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" name="search" placeholder="Search students..." value="<%= search %>" onchange="this.form.submit()">
                </div>
                
                <div class="filter-group">
                    <select name="class" onchange="this.form.submit()">
                        <option value="">All Classes</option>
                        <% classes.forEach(cls => { %>
                            <option value="<%= cls %>" <%= classFilter === cls ? 'selected' : '' %>>Class <%= cls %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="filter-group">
                    <select name="subject" onchange="this.form.submit()">
                        <option value="">All Subjects</option>
                        <% subjects.forEach(subject => { %>
                            <option value="<%= subject %>" <%= subjectFilter === subject ? 'selected' : '' %>><%= subject %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="filter-group">
                    <select name="feeStatus" onchange="this.form.submit()">
                        <option value="">All Fee Status</option>
                        <% feeStatuses.forEach(status => { %>
                            <option value="<%= status %>" <%= feeStatusFilter === status ? 'selected' : '' %>><%= status %></option>
                        <% }); %>
                    </select>
                </div>
                
                <button type="button" class="clear-filters" onclick="clearFilters()">
                    <i class="fas fa-times"></i> Clear
                </button>
            </form>
            
            <a href="/students/add" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> Add Student
            </a>
        </div>

        <!-- Students Count -->
        <div class="results-info">
            <span>Showing <%= students.length %> of <%= totalStudents %> students</span>
        </div>

        <!-- Students Table -->
        <div class="table-container">
            <table class="students-table">
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>Class & Subject</th>
                        <th>Contact</th>
                        <th>Fee Status</th>
                        <th>Parent</th>
                        <th>Join Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (students.length === 0) { %>
                        <tr>
                            <td colspan="7" class="no-data">
                                <i class="fas fa-users"></i>
                                <p>No students found</p>
                                <a href="/students/add" class="btn btn-primary">Add First Student</a>
                            </td>
                        </tr>
                    <% } else { %>
                        <% students.forEach(student => { %>
                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="student-avatar">
                                            <%= student.name.charAt(0).toUpperCase() %>
                                        </div>
                                        <div>
                                            <div class="student-name"><%= student.name %></div>
                                            <div class="student-email"><%= student.email %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="class-subject">
                                        <span class="class-badge">Class <%= student.class %></span>
                                        <span class="subject-text"><%= student.subject %></span>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        <div><i class="fas fa-phone"></i> <%= student.phone %></div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fee-info">
                                        <span class="fee-status <%= student.feeStatus.toLowerCase() %>" onclick="toggleFeeStatus('<%= student._id %>', '<%= student.feeStatus %>')">
                                            <% if (student.feeStatus === 'Paid') { %>
                                                <i class="fas fa-check-circle"></i>
                                            <% } else if (student.feeStatus === 'Pending') { %>
                                                <i class="fas fa-clock"></i>
                                            <% } else { %>
                                                <i class="fas fa-exclamation-triangle"></i>
                                            <% } %>
                                            <%= student.feeStatus %>
                                        </span>
                                        <div class="fee-amount">â‚¹<%= student.feeAmount %></div>
                                    </div>
                                </td>
                                <td>
                                    <div class="parent-info">
                                        <div class="parent-name"><%= student.parentName %></div>
                                        <div class="parent-phone"><i class="fas fa-phone"></i> <%= student.parentPhone %></div>
                                    </div>
                                </td>
                                <td>
                                    <div class="join-date">
                                        <%= new Date(student.joinDate).toLocaleDateString() %>
                                    </div>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/students/<%= student._id %>" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/students/<%= student._id %>/edit" class="btn btn-sm btn-warning" title="Edit Student">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" onclick="deleteStudent('<%= student._id %>', '<%= student.name %>')" title="Delete Student">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?page=<%= currentPage - 1 %>&search=<%= search %>&class=<%= classFilter %>&subject=<%= subjectFilter %>&feeStatus=<%= feeStatusFilter %>" class="pagination-btn">
                        <i class="fas fa-chevron-left"></i> Previous
                    </a>
                <% } %>
                
                <div class="pagination-info">
                    Page <%= currentPage %> of <%= totalPages %>
                </div>
                
                <% if (currentPage < totalPages) { %>
                    <a href="?page=<%= currentPage + 1 %>&search=<%= search %>&class=<%= classFilter %>&subject=<%= subjectFilter %>&feeStatus=<%= feeStatusFilter %>" class="pagination-btn">
                        Next <i class="fas fa-chevron-right"></i>
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>

    <!-- Fee Status Modal -->
    <div id="feeStatusModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Update Fee Status</h3>
                <span class="close" onclick="closeFeeModal()">&times;</span>
            </div>
            <div class="modal-body">
                <p>Select new fee status:</p>
                <div class="fee-status-options">
                    <button class="fee-option paid" onclick="updateFeeStatus('Paid')">
                        <i class="fas fa-check-circle"></i> Paid
                    </button>
                    <button class="fee-option pending" onclick="updateFeeStatus('Pending')">
                        <i class="fas fa-clock"></i> Pending
                    </button>
                    <button class="fee-option overdue" onclick="updateFeeStatus('Overdue')">
                        <i class="fas fa-exclamation-triangle"></i> Overdue
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentStudentId = null;

        function clearFilters() {
            window.location.href = '/students';
        }

        function toggleFeeStatus(studentId, currentStatus) {
            currentStudentId = studentId;
            document.getElementById('feeStatusModal').style.display = 'block';
        }

        function closeFeeModal() {
            document.getElementById('feeStatusModal').style.display = 'none';
            currentStudentId = null;
        }

        async function updateFeeStatus(newStatus) {
            if (!currentStudentId) return;

            try {
                const response = await fetch(`/students/${currentStudentId}/fee-status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ feeStatus: newStatus })
                });

                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    alert('Failed to update fee status: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to update fee status');
            }

            closeFeeModal();
        }

        async function deleteStudent(studentId, studentName) {
            if (!confirm(`Are you sure you want to delete ${studentName}? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/students/${studentId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    location.reload();
                } else {
                    alert('Failed to delete student: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to delete student');
            }
        }

        // Auto-hide alerts
        const alert = document.getElementById('alert');
        if (alert) {
            setTimeout(() => {
                alert.style.animation = 'slideUp 0.3s ease forwards';
            }, 5000);
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('feeStatusModal');
            if (event.target === modal) {
                closeFeeModal();
            }
        }
    </script>
</body>
</html>